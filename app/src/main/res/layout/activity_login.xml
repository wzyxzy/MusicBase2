<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:background="@mipmap/launcher2" />


            <LinearLayout
                android:id="@+id/ll_username"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:background="@mipmap/signin2" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="54dp"
                    android:background="@null"
                    android:hint="@string/username_hint"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:text=""
                    android:textColorHint="@color/grey_cc"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="266dp"
                android:layout_height="1dp"
                android:background="@color/grey_e5" />

            <LinearLayout
                android:id="@+id/ll_password"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:background="@mipmap/signin5" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:text=""
                    android:textColorHint="@color/grey_cc"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btn_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="54dp"
                    android:background="@mipmap/password_off"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="266dp"
                android:layout_height="1dp"
                android:background="@color/grey_e5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/checkbox"
                    android:drawablePadding="6dp"
                    android:singleLine="true"
                    android:text="记住密码"
                    android:textColor="@color/red_e61b19"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></View>

                <TextView
                    android:id="@+id/btn_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="54dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="忘记密码"
                    android:textColor="@color/grey_999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="266dp"
                android:layout_height="36dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/rectangle_e61b19"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_regist"
                android:layout_width="266dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_e61b19_2"
                android:text="注册"
                android:textColor="@color/red_e61b19"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:clickable="true"
                android:text="登录或注册即代表同意《用户协议》"
                android:textColor="@color/grey_999999"
                android:textSize="14sp"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="46dp"
                    android:layout_height="1dp"
                    android:background="@color/grey_999999"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:text="社交账号登录"
                    android:textColor="@color/grey_999999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="46dp"
                    android:layout_height="1dp"
                    android:background="@color/grey_999999"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/weixin" />

                <ImageButton
                    android:id="@+id/btn_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:background="@null"
                    android:src="@mipmap/qq" />

                <ImageButton
                    android:id="@+id/btn_sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@mipmap/sina" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>