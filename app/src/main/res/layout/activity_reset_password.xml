<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/layout_title"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="54dp"
        android:text="你会收到一条带验证码的短信，请输入验证码:"
        android:textColor="@color/grey_999999"
        android:textSize="12sp"
    />
    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="27dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:text="+86"
            android:textColor="@color/red_e61b19"
            android:textSize="18dp"/>


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="54dp"
            android:background="@null"
            android:hint="@string/username_hint"
            android:inputType="phone"
            android:maxLines="1"
            android:text=""
            android:textColorHint="@color/grey_cc"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:layout_width="266dp"
        android:layout_height="1dp"
        android:background="@color/grey_e5"/>

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:hint="短信验证码"
            android:inputType="number"
            android:maxLines="1"
            android:text=""
            android:textColorHint="@color/grey_cc"
            android:textSize="12dp"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_e61b19_3"
            android:onClick="btn_send"
            android:text="获取验证码"
            android:textColor="@color/red_e61b19"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:layout_width="266dp"
        android:layout_height="1dp"
        android:background="@color/grey_e5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_password01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="设置密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:text=""
            android:textColorHint="@color/grey_cc"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:layout_width="266dp"
        android:layout_height="1dp"
        android:background="@color/grey_e5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_password02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:text=""
            android:textColorHint="@color/grey_cc"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:layout_width="266dp"
        android:layout_height="1dp"
        android:background="@color/grey_e5"/>

    <Button
        android:layout_width="266dp"
        android:layout_height="36dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/rectangle_e61b19"
        android:onClick="Confirm"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>